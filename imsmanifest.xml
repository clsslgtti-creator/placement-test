<?xml version="1.0" encoding="UTF-8"?>
<manifest identifier="SLGTTI_PlacementTest_SCORM" version="1.0"
  xmlns="http://www.imsproject.org/xsd/imscp_rootv1p1p2"
  xmlns:adlcp="http://www.adlnet.org/xsd/adlcp_rootv1p2"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.imsproject.org/xsd/imscp_rootv1p1p2 imscp_rootv1p1p2.xsd
                      http://www.imsglobal.org/xsd/imsmd_rootv1p2p1 imsmd_rootv1p2p1.xsd
                      http://www.adlnet.org/xsd/adlcp_rootv1p2 adlcp_rootv1p2.xsd">

  <metadata>
    <schema>ADL SCORM</schema>
    <schemaversion>1.2</schemaversion>
    <lom xmlns="http://www.imsglobal.org/xsd/imsmd_rootv1p2p1">
      <general>
        <title>
          <langstring xml:lang="en-US">SLGTTI Language Placement Test</langstring>
        </title>
        <description>
          <langstring xml:lang="en-US">A comprehensive language placement test with grammar,
            reading, writing, listening, and vocabulary sections.</langstring>
        </description>
        <keyword>
          <langstring xml:lang="en-US">language</langstring>
        </keyword>
        <keyword>
          <langstring xml:lang="en-US">placement</langstring>
        </keyword>
        <keyword>
          <langstring xml:lang="en-US">test</langstring>
        </keyword>
        <keyword>
          <langstring xml:lang="en-US">assessment</langstring>
        </keyword>
      </general>
    </lom>
  </metadata>

  <organizations default="SLGTTI_PlacementTest_Organization">
    <organization identifier="SLGTTI_PlacementTest_Organization">
      <title>English Language</title>

      <item identifier="placement_test_module" isvisible="true">
        <title>Placement Test</title>

        <!-- Introduction SCO -->
        <item identifier="introduction_sco" isvisible="true" identifierref="introduction_resource">
          <title>Introduction</title>
        </item>

        <!-- Grammar Test SCO -->
        <item identifier="grammar_test" isvisible="true" identifierref="grammar_test_resource">
          <title>Grammar Test</title>
        </item>

        <!-- Reading Test SCO -->
        <item identifier="reading_test" isvisible="true" identifierref="reading_test_resource">
          <title>Reading Test</title>
        </item>

        <!-- Listening Test SCO -->
        <item identifier="listening_test" isvisible="true" identifierref="listening_test_resource">
          <title>Listening Test</title>
        </item>

        <!-- Writing Test SCO -->
        <item identifier="writing_test" isvisible="true" identifierref="writing_test_resource">
          <title>Writing Test</title>
        </item>

        <!-- Vocabulary Test SCO -->
        <item identifier="vocabulary_test" isvisible="true" identifierref="vocabulary_test_resource">
          <title>Vocabulary Test</title>
        </item>

        <!-- Completion Page SCO -->
        <item identifier="completion_page" isvisible="true" identifierref="completion_resource">
          <title>Completion</title>
        </item>
      </item>

    </organization>
  </organizations>

  <resources>
    <!-- Introduction Resource -->
    <resource identifier="introduction_resource" type="webcontent" adlcp:scormtype="sco"
